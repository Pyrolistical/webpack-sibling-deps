{
  "name": "webpack-sibling-deps",
  "private": true,
  "dependencies": {
    "lib": "file:./lib",
    "sdk": "file:./sdk"
  },
  "scripts": {
    "clean": "rm -rf dist/ node_modules/ || true",
    "build:sdk": "cd sdk && npm run build",
    "build:lib": "cd lib && npm run build",
    "prebuild": "npm run clean && npm install && npm run build:sdk && npm run build:lib",
    "build": "webpack",
    "prestart": "npm run build",
    "start": "node dist/*.js"
  },
  "devDependencies": {
    "ts-loader": "9.2.6",
    "typescript": "4.5.5",
    "webpack": "5.68.0",
    "webpack-cli": "4.9.2"
  }
}
